#creation = rule(input=inputfile,deps=[dependencies....])

main=binary(input=main.cxx,automatic=true,deps=[circular:A_impl,circular:B_impl])

circular:A=user_module_interface(input=A.cppm,automatic=true)

circular:A_impl=user_module_implementation(input=A.cpp,automatic=true)

circular:B_impl=user_module_implementation(input=B.cpp,automatic=true)


circular:B=user_module_interface(input=B.cppm,automatic=true)

circular:forward=user_module(input=forward.cppm,automatic=true)

circular=user_module(input=circular.cppm,automatic=true)


@DEFAULT_TARGET=main


@IN_SOURCE_BUILD=false

@BUILD_DIRECTORY=./build

@ROOT=true